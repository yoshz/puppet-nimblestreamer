###############################################
# port number nimble server listens on
#
# default: 8081
###############################################
port = <%= @port %>

###############################################
# logging level
#
# the possible values are:
# error, info, verbose, debug
#
# default: info
###############################################
logging = <%= @logging %>

###############################################
# number or worker threads
#
# default: 1
###############################################
worker_threads = <%= @worker_threads %>

###############################################
# maximum size of RAM data cache in megabytes
#
# default: 0
###############################################
max_cache_size = <%= @max_cache_size %>

###############################################
# maximum size of disk data cache in megabytes
#
# default: 0
###############################################
max_disk_cache_size = <%= @max_disk_cache_size %>

###############################################
# path to the directory to store cache
#
# default: <empty>
###############################################
cache_path = <%= @cache_path %>

###############################################
# parameters to access wmspanel
#   (will be filled by registration utility)
#
# panel_domain   - wmspanel server address
# panel_port     - wmspanel server port
# panel_uuid     - wmspanel account id
# panel_password - wmspanel account password
###############################################
<% if @panel_uuid and @panel_password -%>
panel_domain = nimble.wmspanel.com
panel_port = 443
panel_uuid = <%= @panel_uuid %>
panel_password = <%= @panel_password %>
panel_ssl_disabled = false
<% end %>

###############################################
# various configuration
###############################################
<% if @ssl_port %>ssl_port = <%= @ssl_port %>
<% end -%>
<% if @ssl_certificate %>ssl_certificate = <%= @ssl_certificate %>
<% end -%>
<% if @ssl_certificate_key %>ssl_certificate_key = <%= @ssl_certificate_key %>
<% end -%>
<% if @ssl_certificate_key_pass %>ssl_certificate_key_pass = <%= @ssl_certificate_key_pass %>
<% end -%>
<% if @crossdomain_xml_allow_access_from_domain %>crossdomain_xml_allow_access_from_domain = <%= @crossdomain_xml_allow_access_from_domain %>
<% end -%>
<% if @crossdomain_xml %>crossdomain_xml = <%= @crossdomain_xml %>
<% end -%>
<% if @access_control_allow_origin %>access_control_allow_origin = <%= @access_control_allow_origin %>
<% end -%>
<% if @access_control_allow_credentials %>access_control_allow_credentials = <%= @access_control_allow_credentials %>
<% end -%>
<% if @access_control_expose_headers %>access_control_expose_headers = <%= @access_control_expose_headers %>
<% end -%>
<% if @access_control_allow_headers %>access_control_allow_headers = <%= @access_control_allow_headers %><% end -%>
